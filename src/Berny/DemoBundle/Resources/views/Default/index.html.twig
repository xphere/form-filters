{% extends '::base.html.twig' %}

{% block body %}
    <table>
        <caption>Users</caption>
        <thead>
            <tr>
                <td>username</td>
                <td>birthday</td>
                <td>is active</td>
                <td>money</td>
            </tr>
        </thead>
        <tbody>
            {% for user in user_list %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.birthdate|date('Y-m-d') }}</td>
                    <td>{{ user.active }}</td>
                    <td>{{ user.money }}</td>
                </tr>
            {% endfor %}
            <tr></tr>
        </tbody>
    </table>
{% endblock %}
