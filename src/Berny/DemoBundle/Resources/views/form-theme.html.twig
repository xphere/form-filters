{% use "form_div_layout.html.twig" %}

{# Widgets #}

{% block form_widget_compound %}
{% spaceless %}
    <ul {{ block('widget_container_attributes') }}>
        {% if form.parent is empty %}
            {{ form_errors(form) }}
        {% endif %}
        {{ block('form_rows') }}
        {{ form_rest(form) }}
    </ul>
{% endspaceless %}
{% endblock form_widget_compound %}

{% block choice_widget_expanded %}
{% spaceless %}
    <ul {{ block('widget_container_attributes') }}>
        {% for child in form %}
            {{ form_widget(child) }}
            {{ form_label(child) }}
        {% endfor %}
    </ul>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{# Rows #}

{% block form_row %}
{% spaceless %}
    <li>
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </li>
{% endspaceless %}
{% endblock form_row %}

{% block button_row %}
{% spaceless %}
    <li>
        {{ form_widget(form) }}
    </li>
{% endspaceless %}
{% endblock button_row %}
